{
  "name": "openfort-react",
  "version": "0.0.0",
  "description": "The easiest way to integrate Openfort to your project.",
  "main": "packages/openfort-react/src/index.ts",
  "private": true,
  "type": "module",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "check": "biome check --write --unsafe",
    "check:repo": "sherif",
    "check:types": "tsc --noEmit",
    "check:unused": "pnpm clean && knip",
    "clean": "rm -rf packages/openfort-react/build",
    "postinstall": "git config --unset core.hooksPath 2>/dev/null || true && simple-git-hooks && ./.husky/install_gitleaks.sh",
    "scan:secrets": "./.husky/run_gitleaks.sh",
    "dev": "pnpm --filter @openfort/react run dev",
    "dev:firebase": "pnpm --filter quickstart-firebase run dev",
    "dev:headless": "pnpm --filter quickstart-headless run dev",
    "dev:openfort-ui": "pnpm --filter quickstart-openfort-ui run dev",
    "dev:playground": "pnpm --filter playground run dev",
    "build": "node build.js && pnpm --filter @openfort/react run build && cp README.md packages/openfort-react/README.md",
    "build:firebase": "pnpm build && pnpm --filter quickstart-firebase build",
    "build:headless": "pnpm build && pnpm --filter quickstart-headless build",
    "build:openfort-ui": "pnpm build && pnpm --filter quickstart-openfort-ui build",
    "build:playground": "pnpm build && pnpm --filter playground build",
    "changeset": "changeset",
    "changeset:version": "pnpm install --lockfile-only && changeset version",
    "changeset:publish": "pnpm build && changeset publish",
    "changeset:prepublish": "pnpm build"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "packageManager": "pnpm@10.16.1",
  "engines": {
    "node": ">=22.9"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.7",
    "@openfort/openfort-js": "^0.10.27",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@rollup/plugin-typescript": "^11.1.6",
    "@tanstack/react-query": "^5.17.15",
    "knip": "^5.64.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "rollup": "^2.67.1",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.36.0",
    "rollup-plugin-visualizer": "^5.5.4",
    "sherif": "^0.8.4",
    "simple-git-hooks": "^2.13.1",
    "tslib": "^2.8.1",
    "typescript": "^5.8.3",
    "typescript-plugin-styled-components": "^2.0.0",
    "viem": "2.33.0",
    "wagmi": "^2.16.0"
  },
  "simple-git-hooks": {
    "pre-commit": "./.husky/run_gitleaks.sh && pnpm check"
  },
  "knip": {
    "ignore": [
      ".github/**",
      ".husky/**",
      "**/.next/**",
      "**/dist/**",
      "**/build/**",
      "**/node_modules/**",
      "build.js",
      "**/vite-env.d.ts",
      "**/routeTree.gen.ts"
    ],
    "ignoreBinaries": [
      "dev",
      "only-allow",
      "simple-git-hooks"
    ],
    "ignoreDependencies": [
      "@biomejs/biome",
      "@changesets/changelog-github",
      "@changesets/cli",
      "simple-git-hooks",
      "sherif",
      "knip",
      "tslib",
      "@rollup/plugin-typescript"
    ],
    "ignoreWorkspaces": [
      "examples/**"
    ],
    "workspaces": {
      ".": {
        "entry": [
          "build.js!"
        ]
      },
      "packages/openfort-react": {
        "entry": [
          "src/index.ts!"
        ],
        "ignore": [
          "version.ts"
        ]
      }
    }
  },
  "sideEffects": false
}
